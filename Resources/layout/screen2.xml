<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:orientation="vertical"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="Счётчик упражнений"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"/>

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        app:cardBackgroundColor="#99ccff"
        android:minWidth="300px"
        android:minHeight="600px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView2">
    

        <TableLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout1"
            android:layout_gravity="center" >
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="20dp"
                    android:text="Упражнение на бицепс"
                    p4:placeholder="true"
                    android:minWidth="30px"
                    android:minHeight="30px"
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="20dp"
                    android:text="0"
                    p4:placeholder="true"
                    android:minWidth="100px"
                    android:minHeight="30px"
                    android:id="@+id/textView2"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:padding="20dp"
                    android:text="Отведение рук в сторону"
                    p4:placeholder="true"
                    android:minWidth="30px"
                    android:minHeight="30px"
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="20dp"
                    android:text="0"
                    p4:placeholder="true"
                    android:minWidth="100px"
                    android:minHeight="30px"
                    android:id="@+id/textView4"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:padding="20dp"
                    android:text="Жим над головой"
                    p4:placeholder="true"
                    android:minWidth="30px"
                    android:minHeight="30px"
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="20dp"
                    android:text="0"
                    p4:placeholder="true"
                    android:minWidth="100px"
                    android:minHeight="30px"
                    android:id="@+id/textView6"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="20dp"
                    android:text="Длительность"
                    p4:placeholder="true"
                    android:minWidth="30px"
                    android:minHeight="30px"
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="20dp"
                    android:text="0"
                    p4:placeholder="true"
                    android:minWidth="100px"
                    android:minHeight="30px"
                    android:id="@+id/textView8"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:text="Сбросить результаты"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:id="@+id/appCompatButton3" />

    <androidx.appcompat.widget.AppCompatButton
        android:text="Закончить тренировку"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:id="@+id/appCompatButton4" />

</LinearLayout>
