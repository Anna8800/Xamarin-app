<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="45dp"
        android:textSize="18dip"
        android:text="Ваша умная гантель" />

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        app:cardBackgroundColor="#99ccff"
        android:minWidth="300px"
        android:minHeight="600px"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:id="@+id/cardView1">

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:id="@+id/linearLayout1">


            <androidx.appcompat.widget.AppCompatButton
                android:text="Начать тренировку"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:id="@+id/appCompatButton1"
                android:enabled="false" />

            <androidx.appcompat.widget.AppCompatButton
                android:text="Выход"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:layout_marginBottom="30dp"
                android:id="@+id/appCompatButton2" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/linearLayout2"
        android:baselineAligned="false">

        <androidx.appcompat.widget.AppCompatTextView
            android:text="Всегда выбирайте самый трудный путь - на нём меньше конкурентов."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dip"
            android:padding="10dp"
            android:textAlignment="center"
            android:id="@+id/appCompatTextView1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:text="Шарль де Голль"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dip"
            android:padding="10dp"
            android:textAlignment="center"
            android:id="@+id/appCompatTextView2" />
    </LinearLayout>
</LinearLayout>
